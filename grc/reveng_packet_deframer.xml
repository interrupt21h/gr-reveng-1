<?xml version="1.0"?>
<block>
  <name>Packet Deframer</name>
  <key>reveng_packet_deframer</key>
  <category>reveng</category>
  <import>import reveng</import>
  <make>reveng.packet_deframer($name, $sync, $pkt_len)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Name</name>
    <key>name</key>
    <value></value>
    <type>string</type>
    <hide>#if len($name()) > 0 then 'none' else 'part'#</hide>
  </param>

  <param>
    <name>Sync Word</name>
    <key>sync</key>
    <value>map(int, bin(0xd391)[2:].zfill(16))</value>
    <type>raw</type>
  </param>

  <param>
    <name>Packet Len</name>
    <key>pkt_len</key>
    <value>32</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
